<idea-plugin>
    <id>com.jetbrains.GitAlso</id>
    <name>GitAlso</name>
    <version>0.0.6</version>
    <vendor email="walingar@mail.ru" url="http://www.jetbrains.com">JetBrains</vendor>

    <description>This plugin predicts files which developer may forgot to change or add to CVS.</description>

    <idea-version since-build="183.888"/>

    <project-components>
        <component>
            <implementation-class>com.jetbrains.gitalso.GitAlsoComponent</implementation-class>
        </component>

    </project-components>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <vcsLogIndexService implementation="com.jetbrains.gitalso.repository.GitAlsoService"/>
        <checkinHandlerFactory implementation="com.jetbrains.gitalso.commitHandle.GitAlsoCheckinHandlerFactory"/>
        <projectService serviceInterface="com.jetbrains.gitalso.repository.GitAlsoService"
                        serviceImplementation="com.jetbrains.gitalso.repository.GitAlsoService"/>
        <applicationService serviceInterface="com.jetbrains.gitalso.storage.log.UserIDProvider"
                            serviceImplementation="com.jetbrains.gitalso.storage.log.UserIDProvider"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>